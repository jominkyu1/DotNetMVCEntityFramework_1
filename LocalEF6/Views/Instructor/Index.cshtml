@using System.IdentityModel.Configuration
@model LocalEF6.ViewModels.InstructorIndexData

@{
    ViewBag.Title = "강사";
}

<h2>강사</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Last Name
        </th>
        <th>
            First Name
        </th>
        <th>
            Office
        </th>
        <th>
            Hire date
        </th>
        <th>
            Courses
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Instructors)
    {
        string selectedRow = "";
        if (item.ID == ViewBag.InstructorID)
        {
            selectedRow = "table-success";
        }

        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @if (item.OfficeAssignment != null)
                {
                    @item.OfficeAssignment.Location
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @foreach (var course in item.Courses)
                {
                    @course.CourseID @:&nbsp; @course.Title <br/>
                }
            </td>
            <td>
                @Html.ActionLink("Select", "Index", new { id=item.ID }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>

@if (Model.Courses != null)
{
    <h3>강사가 진행한 강의 목록</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>Number</th>
            <th>Title</th>
            <th>Department [학과]</th>
        </tr>
        
        @foreach (var item in Model.Courses)
        {
            string selectedRow = "";
            if (item.CourseID == ViewBag.CourseID)
            {
                selectedRow = "table-success";
            }

            <tr class="@selectedRow">
                <td>@Html.ActionLink("Select", "Index", new{courseID = item.CourseID})</td>
                <td>@item.CourseID</td>
                <td>@item.Title</td>
                <td>@item.Department.Name</td>
            </tr>
        }
    </table>
}

@if (Model.Enrollments != null)
{
    <h3>수강생 기록</h3>

    <table class="table">
        <tr>
            <th>Name</th>
            <th>Grade</th>
        </tr>
        @foreach (var item in Model.Enrollments)
        {
            <tr>
                <td>@item.Student.FullName</td>
                <td>@Html.DisplayFor(view => item.Grade)</td>
                <!-- item.grade처럼 속성으로 접근시 NULL일경우 치환되는 [DisplayFormat] 작동X-->
            </tr>
        }
    </table>
}

